
.esCatDlg
  .dw-click-to-show
    padding: 10px 0;
    display: block;
    &:first-of-type
      margin-top: 20px;

  input
    max-width: 25ex;

  .form-group
    margin-bottom: 18px;

  .checkbox
    margin-bottom: 0;

  // Lots of whitespace because of the delete-category button, so reduce padding-bottom.
  .modal-body
    padding-bottom: 8px;

.esCatDlg_slug_help_addr_slug
  font-weight: bold;
  font-size: 105%;
  margin-left: 1px;


.s_CD_Dd
  margin-bottom: 20px;
  p
    font-size: 14px;
    font-weight: bold;
    display: inline-block;
    margin-right: 15px;

    &.icon-trash:before
      content: '\e806';
      font-size: 22px;
      position: relative;
      top: 2px;
      color: #444;
      margin-right: 7px;

.s_CD_Btns
  text-align: right;

.s_CD_DelB
  border-color: hsl(0, 70%, 55%);
  color: hsl(0, 70%, 43%);

.s_CD_UndelB
  font-weight: bold;
  color: white;
  background: hsl(0, 82%, 56%);
  border-color: hsl(0, 82%, 56%);

.s_CD_DelB,
.s_CD_UndelB
  &:hover
    color: white;
    background: hsl(0, 100%, 68%);
    border-color: hsl(0, 100%, 68%);


.s_CD_Sec_PoPs,
.s_PoP
  clearfix()

.s_PoP
  clear: both;
  list-style: none;
  margin: 0 0 16px;

.s_PoP_Expl
  display: inline-block;
  width: 110px;
  text-align: right;

$s_PoP_Un_paddingLeftPx = 10px;

.s_PoP_Un
  display: inline-block;
  min-width: 180px;
  padding-left: $s_PoP_Un_paddingLeftPx;

.s_PoP_Un .btn
  min-width: 160px;
  text-align: left;

.s_PoP_Expl-What,
.s_PoP_Ps
  float: left;
  display: block;
  margin-top: 11px;
  .form-group
    margin-bottom: 10px;
    .checkbox
      margin-top: 0;

.s_PoP_Ps
  padding-left: $s_PoP_Un_paddingLeftPx + 2;

.s_CD_Sec_AddB
  margin-left: 10px;

