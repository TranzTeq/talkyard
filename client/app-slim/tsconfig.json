{
    "compilerOptions": {
        "target": "ES5",
        "removeComments": false,
        "lib": ["es5", "es2015", "dom"],
        "types": ["react", "react-dom", "lodash", "core-js"],
        "outFile": "slim-typescript.js",
        "sourceMap": true,
        "inlineSources": true  // include source code in mapping file
    },
    "include": [
        "**/*.ts"
    ],
    "exclude": [
        "slim-bundle.d.ts",
        "**/*.spec.ts",
        "**/*.test.ts"
    ]
}
