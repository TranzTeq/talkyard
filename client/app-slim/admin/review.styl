  padding: 14px;
  box-shadow: 1px 4px 12px 1px hsl(0, 0%, 50%) inset;
  background: hsl(0, 0%, 99%);

.esRT_TitleToReview
  font-size: 30px;
  margin: 5px 0 16px;
  padding-top: 0;
  color: hsl(0, 0%, 36%);

.s_RT_WrittenBy,
.s_RT_LastAprEditBy,
.s_RT_FlaggedBy,
.s_RT_Flags_Flag
  margin-top: 0.4em;
  margin-bottom: 0.4em;
.s_RT_Flags_Flag-Old
