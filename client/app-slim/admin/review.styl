

.s_A_Rvw .form-group
  margin-top: 25px;

.esReviewTask
  margin: 2em 0 3em;
  &:first-child
    margin-top: 1.5em;
  .esP_By
    margin-right: 0;

.esReviewTask_whys,
.esReviewTask_whys li
  display: inline;
  margin: 0;

.esReviewTask-manyWhys
  .esReviewTask_what
    display: block;
